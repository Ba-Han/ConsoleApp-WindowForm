@{
    ViewData["Title"] = "OverView Page";
}

@model List<Expense>

<a class="btn btn-outline-primary" asp-action="Expense">Back</a>
<div class="text-center">
    <h1 class="display-4">See All Expense List</h1>
    <hr />
    <h3>Total Expenses $@ViewBag.Expenses</h3>
    <br/>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Value</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach(var expense in Model)
                {
                    <tr>
                        <td>@expense.Id</td>
                        <td>@expense.Value</td>
                        <td>@expense.Description</td>
                        <td>
                            <a asp-action="CreateOrEditExpense" asp-route-id="@expense.Id" class="btn btn-outline-primary">Edit</a>
                            <a asp-action="DeleteExpense" asp-route-id="@expense.Id" class="btn btn-outline-danger">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
