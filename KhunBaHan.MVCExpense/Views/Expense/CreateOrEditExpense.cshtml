@{
    ViewData["Title"] = "Create Or Edit Expense Page";
}

@model KhunBaHan.MVCExpense.Models.Expense

<a class="btn btn-outline-primary" asp-action="Expense">Back</a>
<div class="text-center">
    <h1 class="display-4">Create Or Edit Expense Page</h1>
    <hr />
</div>

<form asp-action="CreateOrEditExpenseForm" asp-controller="Expense">
    <input type="hidden" class="form-control" placeholder="0" asp-for="Id" />

    <lable>Value $:</lable>
    <input type="number" class="form-control" placeholder="0" step="0.01" asp-for="Value" required />

    <lable class="mt-4">Description:</lable>
    <input type="text" class="form-control" placeholder="Add a description" asp-for="Description" required />

    <br />
    <button class="btn btn-outline-primary">Ok</button>
</form>
