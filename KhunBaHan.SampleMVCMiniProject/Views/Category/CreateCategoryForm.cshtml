@{
    ViewData["Title"] = "Create Category Form";
}

<div class="container mt-3">
    <div class="row justify-content-center">
        <div class="col">
            <div class="card-header">
                <h3 class="text-center mt-2">
                    Create Category Form
                </h3>
                <div class="card-body">
                    <form method="post" action="/Category/SaveCategoryForm">
                        <label>Category Name:</label>
                        <input type="text" name="CategoryName" class="form-control" placeholder="Put your category name." required />
                        <br />
                        <a class="btn btn-outline-primary" href="/Category/GetListDataCategory">Back</a>
                        <button class="btn btn-outline-primary">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>