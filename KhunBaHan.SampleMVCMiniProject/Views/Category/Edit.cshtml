@model List<GetCategoryModel>;

@{
    ViewData["Title"] = "Edit Category";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Edit Category</h3>
                </div>
                <div class="card-body">
                    <form method="post" action="/Category/Update">
                        <input type="hidden" name="CategoryId" value="@Model[0].CategoryId" />
                        <label>Category Name: </label>
                        <input type="text" class="form-control" name="CategoryName" value="@Model[0].CategoryName" required />
                        <br />
                        <a class="btn btn-outline-primary" href="/Category/GetListDataCategory">Back</a>
                        <input type="submit" class="btn btn-outline-primary float-end" value="Save" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>