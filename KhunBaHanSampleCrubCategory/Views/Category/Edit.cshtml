@model List<CategoryModel>;
@{
    ViewData["Title"] = "Edit Category";
}

<div class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card-header">
                <h2 class="text-center">
                    Edit Category
                </h2>
            </div>
            <div class="card-body">
                <form method="post" action="/Category/UpdateCategory">
                    <input type="hidden" name="CategoryId" value="@Model[0].CategoryId"/>
                    <label>Category Name:</label>
                    <input type="text" class="form-control" name="CategoryName" value="@Model[0].CategoryName" placeholder="Put your category name" required />
                    <br />
                    <a class="btn btn-outline-primary" href="/Category/Index">Back</a>
                    <input type="submit" class="btn btn-outline-primary" value="Save"/>
                </form>
            </div>
        </div>
    </div>
</div>